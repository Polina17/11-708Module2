@model Module2Project.Models.RegisterModel

<h2>Регистрация</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="All"></div>
    <div>
        <div>
            <label asp-for="Login">Введите логин</label><br />
            <input type="text" asp-for="Login" />
        </div>
        <div>
            <label asp-for="Password">Введите пароль</label><br />
            <input asp-for="Password" />
        </div>
        <div>
            <label asp-for="ConfirmPassword">Повторите пароль</label><br />
            <input asp-for="ConfirmPassword" />
        </div>
        <div>
            <label asp-for="FirstName">Введите имя</label><br />
            <input type="text" asp-for="FirstName" />
        </div>
        <div>
            <label asp-for="LastName">Введите фамилию</label><br />
            <input type="text" asp-for="LastName" />
        </div>
        <div>
            <input type="submit" value="Регистрация" />
        </div>
    </div>
</form>